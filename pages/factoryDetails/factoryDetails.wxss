/* 公司开头 */

.list-all{
  display:flex;
  align-items:center;
  justify-content:center;
  height:140px;
  width:100%;
  background-color:#C0C0C0;

}
.list{
  height:100px;
  width:90%;
  display:flex;
  
}
.list image{
  height:100px;
  width:30%;
  
}
.list-right{
  height:100px;
  width:70%;
}
.title{
  width:100%;
  position:relative;
  top:2px;    
  left:10px;
  font-size:40rpx;
  color:white;
}
.list-right-in{
  position:relative;
  top:14px;    
  left:10px;
  width:100%;
  height: 10px;
  display:flex;
  align-items:center;

}
.mark{
  height:30px;
  width:80px;
  background-color:white;
  color:black;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  left:10px; 
}
.attestation{
  height:30px;
  width:80px;
  background-color:orange;
  color:white;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  left:10px; 
}
.list-img{
  height:30px;
  width:40px;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  left:10px; 
}
.list-img image{
  height:20px;
  width:20px;
}

