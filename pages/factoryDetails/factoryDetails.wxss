/* 滑动 */
.scroll-header{
display: flex;
white-space: nowrap;
background:#FFFFFF;
}
.scroll-header-in{
height:250px;
width:250px;
display: inline-block;
justify-content: center;
align-items: center;
}
.scroll-header-all{
  height:250px;
  width:240px;
}
.scroll-header-image{
  height:140px;
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-header-image image{
  height:140px;
  width:180px;
}
.scroll-header-title{
  height:40px;
  width:100%;
  font-size:35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-header-price{
  height:30px;
  width:100%;
  font-size:35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:orange;
}
.scroll-header-place{
  height:20px;
  width:100%;
  font-size:25rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
